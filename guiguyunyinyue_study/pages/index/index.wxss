/* pages/index/index.wxss */
.banners{
  width: 100%;
  height: 300rpx;
}

.banners image{
  width: 100%;
  height: 100%;
}

/*五个图标导航区域的样式*/
.navContainer{
  display: flex;
}

.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}

.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240,19,19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}

.navItem text{
  font-size: 26rpx;
}

/*推荐歌曲*/
.recommendContainer{
  padding: 20rpx;
}

/*推荐歌曲的内容展示区域*/
.recommendScroll{
  display: flex;
  height: 300rpx;
}

.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}

.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scrollItem text{
  font-size: 26rpx;
  /*单行文本溢出部分隐藏 省略号代替*/
  /*overflow:hidden;*/
  /*text-overflow:ellipsis;*/
  /*white-space:nowrap;*/
  /*display: block;*/

  /*多行文本溢出隐藏 省略号代替*/
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;/*设置或检索伸缩盒对象的子元素的排列方式*/
  -webkit-line-clamp:2;/*用来限制在一个块元素显示的文本的行*/
}

.topList{
  padding: 20rpx;
}

.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}

.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.musicItem{
  display: flex;
  /*当一个元素设置为flex其子元素会自动成为block元素可以让view内的内联元素宽高设置起效*/
  margin-top:20rpx;
}

.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}

.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  max-width: 400rpx;
}

.topListSwiper{
  height: 450rpx;
}

.swiperItem{
  width: 96%;
  background: #fbfbfb;
}





























